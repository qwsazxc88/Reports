<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Reports.Core.Domain" assembly="Reports.Core">
  <class name="ClearanceChecklistRole" table="[ClearanceChecklistRole]">
    
    <id name="Id">
      <generator class="native" />
    </id>
    
    <version name="Version" column= "Version"/>
    
    <property name="Description" length="256" not-null="false"/>

    <property name="Code" length="32" not-null="false" />

    <property name="DaysForApproval" not-null="false"/>
    
    <set name="RoleOwners" table="UserClearanceChecklistRole" lazy="true" inverse="true" cascade="save-update">
      <key column="RoleId" foreign-key="FK_UserClearanceChecklistRole_ClearanceChecklistRole"/>
      <many-to-many class="User" column="UserId" foreign-key="FK_UserClearanceChecklistRole_User"/>
    </set>
    
  </class>
</hibernate-mapping>