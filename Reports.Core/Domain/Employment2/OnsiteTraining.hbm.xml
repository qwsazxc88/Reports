<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Reports.Core.Domain" assembly="Reports.Core">
  <class name="OnsiteTraining" dynamic-update="true" table="OnsiteTraining">
    
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" column= "Version"/>

    <many-to-one name="Type" class="OnsiteTrainingType" column="OnsiteTrainingTypeId" foreign-key="FK_OnsiteTraining_OnsiteTrainingType" index="OnsiteTraining_OnsiteTrainingType"  not-null="false"/>
    <property name="Description" length="250" not-null="false"/>
    <property name="BeginningDate" not-null="false"/>
    <property name="EndDate" length="250" not-null="false"/>
    <property name="IsComplete" not-null="false"/>
    <property name="ReasonsForIncompleteTraining" length="250" not-null="false"/>
    <property name="Results" length="250" not-null="false"/>
    
  </class>
</hibernate-mapping>