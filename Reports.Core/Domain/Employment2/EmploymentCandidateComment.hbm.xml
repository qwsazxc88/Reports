<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Reports.Core.Domain" assembly="Reports.Core">
  <class name="EmploymentCandidateComment" dynamic-update="true" table="EmploymentCandidateComments">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" column= "Version"/>

    <property name="UserId" not-null="false"/>
    <property name="CandidateId" not-null="false"/>
    <property name="CommentTypeId" not-null="false"/>
    <property name="CreatedDate" not-null="false"/>
    <property name="Comment" length="256" not-null="false"/>

  </class>
</hibernate-mapping>