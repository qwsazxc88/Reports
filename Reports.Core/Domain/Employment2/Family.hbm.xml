<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Reports.Core.Domain" assembly="Reports.Core">
  <class name="Family" dynamic-update="true" table="Family">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" column= "Version"/>

    <many-to-one name="Spouse" class="FamilyMember" column="SpouseId" foreign-key="FK_Family_Spouse" index="Family_Spouse"  not-null="false"/>
    <many-to-one name="Father" class="FamilyMember" column="FatherId" foreign-key="FK_Family_Father" index="Family_Father"  not-null="false"/>
    <many-to-one name="Mother" class="FamilyMember" column="MotherId" foreign-key="FK_Family_Mother" index="Family_Mother"  not-null="false"/>
    <bag name="Children" lazy="true" cascade="all-delete-orphan">
      <key column="FamilyId" foreign-key="FK_Children_Family"/>
      <one-to-many class="FamilyMember"/>
    </bag>
    <property name="Cohabitants" length="250" not-null="false"/>
  </class>
</hibernate-mapping>