<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Reports.Core.Domain" assembly="Reports.Core">
  <class name="Managers" dynamic-update="true" table="Managers">
    
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" column= "Version"/>

    <many-to-one name="Candidate" class="EmploymentCandidate" column="CandidateId" foreign-key="FK_Managers_Candidate" index="Managers_Candidate" not-null="true"/>
    <many-to-one name="Position" class="Position" column="PositionId" foreign-key="FK_Managers_Position" index="Managers_Position"  not-null="false"/>
    <many-to-one name="Directorate" class="Department" column="DirectorateId" foreign-key="FK_Managers_Directorate" index="Managers_Directorate"  not-null="false"/>
    <many-to-one name="Department" class="Department" column="DepartmentId" foreign-key="FK_Managers_Department" index="Managers_Department"  not-null="false"/>
    <property name="EmploymentConditions" length="100" not-null="false"/>
    <property name="Schedule" length="50" not-null="false"/>
    <property name="ProbationaryPeriod" length="50" not-null="false"/>
    <!--property name="SalaryBasis" precision="19" scale="2" not-null="true"/-->
    <property name="WorkCity" length="50" not-null="false"/>
    <property name="PersonalAddition" precision="19" scale="2" not-null="false"/>
    <property name="PositionAddition" precision="19" scale="2" not-null="false"/>
    <property name="IsFront" not-null="true"/>
    <property name="Bonus" precision="19" scale="2" not-null="false"/>
    <property name="IsLiable" not-null="true"/>
    <property name="RequestNumber" length="50" not-null="false"/>
    
  </class>
</hibernate-mapping>