@{
    var dto = UserDto.Deserialize(((FormsIdentity)(HttpContext.Current.User.Identity)).Ticket.UserData);
}
@using Reports.Presenters.Services.Impl
@using Reports.Core
@if (Request.IsAuthenticated)
{
        <input type="hidden" id="ActiveMenuItem" name="ActiveMenuItem" value="" />
        <table class="menu"  style="width:100% ;border:1px solid">
            <tr>
                <td id="liTimesheet" class="mainOn"><a href="#"><span>Табель</span></a>
                </td>  
                <td id="liCharge">@Html.ActionLink("Начисления", "Index", "Home", new { menuId = "1" }, null)
                </td> 
                <td id="liMember">@Html.ActionLink("Штатное расписание", "Index", "Home", new { menuId = "2" }, null)
                </td> 
            </tr>
            <tr style="border-top:1px solid">
                <td colspan="3">
                <table style="width:100%">
                <tr>
                @if (dto.UserRole == UserRole.Admin)
                {
                     <td class="menuitem" id="adminUsers" >@Html.ActionLink("Пользователи", "UserList", "Admin")</td>
                     <td class="menuitem" id="adminSettings" >@Html.ActionLink("Настройки", "Settings", "Admin")</td>
                     <td class="menuitem" id="adminInfo" >@Html.ActionLink("Информация", "InformationsList", "Admin")</td>
                }
                else if (dto.UserRole == UserRole.Chief)
                {
                    <td class="menuitem" id="userTimesheet">@Html.ActionLink("Табель", "TimesheetList", "Employee", new { managerId = dto.Id }, null)</td>
                }
                else if (dto.UserRole == UserRole.Employee || dto.UserRole == UserRole.Manager || dto.UserRole == UserRole.PersonnelManager
                        || dto.UserRole == UserRole.Inspector)
                {
                        if (dto.UserRole != UserRole.Employee)
                        {
                            <td class="menuitem" id="userAllRequest">@Html.ActionLink("Все заявки", "AllRequestList", "UserRequest")</td>
                        }
                        <td class="menuitem" id="userSicklist">@Html.ActionLink("Больничные", "SicklistList", "UserRequest")</td>
                        <td class="menuitem" id="userMission">@Html.ActionLink("Командировки", "MissionList", "UserRequest")</td>
                        <td class="menuitem" id="userTimesheetCorrection">@Html.ActionLink("Корректировки", "TimesheetCorrectionList", "UserRequest")</td>
                        <td class="menuitem" id="userAbsence">@Html.ActionLink("Невыходы", "AbsenceList", "UserRequest")</td>
                        <td class="menuitem" id="userVacation">@Html.ActionLink("Отпуска", "VacationList", "UserRequest")</td>
                        <td class="menuitem" id="userDismissal">@Html.ActionLink("Увольнения", "DismissalList", "UserRequest")</td>
                        if (dto.UserRole != UserRole.Inspector)
                        {
                            <td class="menuitem" id="userTimesheet">@Html.ActionLink("Табель", "TimesheetList", "Employee", new { managerId = dto.Id }, null)</td>
                        }
                        if (dto.UserRole == UserRole.PersonnelManager || dto.UserRole == UserRole.Manager)
                        {
                            <td class="menuitem" id="userAccept">@Html.ActionLink("Контроль ввода", "AcceptRequests", "UserRequest")</td>
                        }
                }
                <td>@Html.ActionLink("На главную страницу", "Index", "Home")</td>
                </tr>
                </table>
                </td>
            </tr>
        </table>
