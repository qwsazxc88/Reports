                                        <tr>
                                            <td><label>Расчетный счет:</label></td>
                                            <td><label>@Model.PayerInfo[0].Account</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк:</label></td>
                                            <td><label>@Model.PayerInfo[0].BankName</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк БИК:</label></td>
                                            <td><label>@Model.PayerInfo[0].BankBIK</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк корр/счет:</label></td>
                                            <td><label>@Model.PayerInfo[0].CorrAccount</label></td>
                                        </tr>
                                    </table>
                                }
                            </td>
                            <td>
                                @if (@Model.PayeerInfo != null && @Model.PayeerInfo.Count != 0)
                                {
                                    <table>
                                        <tr>
                                            <td><label>Наименование:</label></td>
                                            <td><label>@Model.PayeerInfo[0].Name</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>ИНН:</label></td>
                                            <td><label>@Model.PayeerInfo[0].INN</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>КПП:</label></td>
                                            <td><label>@Model.PayeerInfo[0].KPP</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Расчетный счет:</label></td>
                                            <td><label>@Model.PayeerInfo[0].Account</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк:</label></td>
                                            <td><label>@Model.PayeerInfo[0].BankName</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк БИК:</label></td>
                                            <td><label>@Model.PayeerInfo[0].BankBIK</label></td>
                                        </tr>
                                        <tr>
                                            <td><label>Банк корр/счет:</label></td>
                                            <td><label>@Model.PayeerInfo[0].CorrAccount</label></td>
                                        </tr>
                                    </table>
                                }
                            </td>
                            <td>
                                @Html.TextBoxFor(m => Model.Account, Model.StatusID == 4 ? (object)new { maxlength = "25" } : (object)new { disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.Account)
                            </td>
                        </tr>
                        @*
                        <tr>
                            <td style="width:220px">
                                @Html.LabelFor(m => m.DTID):
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.DTID, new SelectList(Model.DetailTypes, "ID", "Name"), Model.StatusID == 4 ? null : (object)new { disabled = "disabled" }) 
                                @Html.ValidationMessageFor(model => model.DTID)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.Name):
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.Name, Model.StatusID == 4 ? (object)new { maxlength = "150" } : (object)new { disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.INN):
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.INN, Model.StatusID == 4 ? (object)new { maxlength = "12" } : (object)new { disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.INN)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.KPP):
                            </td>
                            <td>
