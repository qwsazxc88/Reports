            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.CorrAccount):
                </td>
                <td>
                    @Html.TextBoxFor(model => model.CorrAccount, (object)new { maxlength = "20" })
                    @Html.ValidationMessageFor(model => model.CorrAccount)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" value="Записать" title="Сохранить введенные данные в базе данных" onclick="AjaxFormRequest('divDetailDialog', 'DetailForm', '/GPD/GpdRefDetailDialog')"/>
                </td>
            </tr>
        </table>
    </form>    
        

