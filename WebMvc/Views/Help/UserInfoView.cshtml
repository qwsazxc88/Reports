@model Reports.Presenters.UI.ViewModel.HelpUserInfoModel
<table style="width:100%">
    <tr>
        <td colspan="2"  style="font-weight:bold">
          <input type="hidden" id="Guid" name="Guid" value="@Model.Guid" />
            Реквизиты
        </td>
    </tr>
    <tr>
        <td style="width:18%">
            @Html.LabelFor(m => m.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(m => m.DateCreated)
            <input type="hidden" id="DateCreated" name="DateCreated" value="@Model.DateCreated" />
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.DocumentNumber)
        </td>
        <td>
            @Html.DisplayFor(m => m.DocumentNumber)
            <input type="hidden" id="DocumentNumber" name="DocumentNumber" value="@Model.DocumentNumber" /> 
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.UserName)
        </td>
        <td>
            @Html.DisplayFor(m => m.UserName) <a href="mailto:@Model.Email">@Model.Email</a>
            <input type="hidden" id="UserName" name="UserName" value="@Model.UserName" />
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Position)
        </td>
        <td>
            @Html.DisplayFor(m => m.Position)
            <input type="hidden" id="Position" name="Position" value="@Model.Position" />
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Department1)
        </td>
        <td>
            @Html.DisplayFor(m => m.Department1)
            <input type="hidden" id="Department1" name="Department1" value="@Model.Department1" />
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Department2)
        </td>
        <td>
            @Html.DisplayFor(m => m.Department2)
            <input type="hidden" id="Department2" name="Department2" value="@Model.Department2" />
        </td>
    </tr>
     <tr id="ManagerNameRow">
        <td>
            @Html.LabelFor(m => m.ManagerName)
        </td>
        <td>
            @Html.DisplayFor(m => m.ManagerName)
            <input type="hidden" id="ManagerName" name="ManagerName" value="@Model.ManagerName" />
        </td>
    </tr>
     <tr>
        <td>
            @Html.LabelFor(m => m.Creator)
        </td>
        <td>
            @Html.DisplayFor(m => m.Creator)
            <input type="hidden" id="Creator" name="Creator" value="@Model.Creator" />
        </td>
    </tr>
    @if (Model.IsForQuestion)
    {
     <tr>
        <td>
            @Html.LabelFor(m => m.QuestionSendDate)
        </td>
        <td>
            @Html.DisplayFor(m => m.QuestionSendDate)
            <input type="hidden" id="QuestionSendDate" name="QuestionSendDate" value="@Model.QuestionSendDate" />
        </td>
    </tr>
    }
    <tr>
        <td>
            @Html.LabelFor(m => m.Worker)
        </td>
        <td>
            @Html.DisplayFor(m => m.Worker)
            <input type="hidden" id="Worker" name="Worker" value="@Model.Worker" />
        </td>
    </tr>
    <tr>
        <td>
            @if(Model.IsForQuestion) {<text>Ответ дан</text> } else {<text>@Html.LabelFor(m => m.WorkerEndDate)</text>}
        </td>
        <td>
            @Html.DisplayFor(m => m.WorkerEndDate)
            <input type="hidden" id="WorkerEndDate" name="WorkerEndDate" value="@Model.WorkerEndDate" />
        </td>
    </tr>
    <tr>
        <td>
            @if(Model.IsForQuestion) {<text>Ответ подтвержден</text> } else {<text>@Html.LabelFor(m => m.ConfirmDate)</text>}
        </td>
        <td>
            @Html.DisplayFor(m => m.ConfirmDate)
            <input type="hidden" id="ConfirmDate" name="ConfirmDate" value="@Model.ConfirmDate" />
        </td>
    </tr>
    <tr>
       <td colspan="2">
         <input type="hidden" id="IsForQuestion" name="IsForQuestion" value="@Model.IsForQuestion" />
       </td>
    </tr>
</table>
