@using Reports.Presenters.UI.Bl.Impl;
@model Reports.Presenters.UI.ViewModel.HelpFaqListModel
<table id="QuestionsTable" style="width: 100%;">
        <tr>
            <td colspan="3">
                <input type="button" value="Добавить запись" @if (!Model.IsAddAvailable) { <text>style = "display:none"</text>; } id="AddQuestion" onclick="OnAddQuestion();"/>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div id="ListQuestionsError" style="color:Red" visible="false"/>
            </td>    
        </tr>    
        @if (Model != null && Model.Questions != null && Model.Questions.Count > 0)
        {
            foreach (var question in Model.Questions)
            {
                <tr>
                    <td style="border:1px solid;width:100%" class="comment-text">@question.Question</td>
                @if (Model.IsAddAvailable)
                {
                
                    <td style="border:1px solid">
                        <input type="button" value="Редактировать" id="EditVersion" onclick="OnEditQuestion(@question.Id);"/>
                        <input type="button" value="Удалить" id="DeleteVersion" onclick="OnDeleteQuestion(@question.Id);"/>
                    </td>
                }
                </tr>
                <tr>
                    <td colspan="2" style="border:1px solid;" class="comment-text">@question.Answer</td>
                </tr>
            }
        }
</table>
