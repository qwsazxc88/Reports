            });
            return minId - 1;
        }
        function findPositionUsingSortOrder(list,sortOrder) {
            var found = -1;
            jQuery.each(list, function (i, val) {
                if(found == -1)
                {
                    if ((val.SortOrder > sortOrder) || (val.SortOrder < 0))
                        found = i;
                }
            });
            if(found == -1)
                return undefined;
            return found;
        }  
        function renumberCosts(list) {
            var number = 1;
            jQuery.each(list, function (i, val) {
                if (val.SortOrder >= 0)
                {
                    val.Number = number;
                    number = number + 1
                }
            });
        } 
         

