                            <span id="LoadingIndicator" ng-class="{loading:IsWorking}"></span>
                            <input type="button" style="float: right;" onclick="window.print();" value="Печать"/>
                            <input type="button" value="Excel" style="float:right;" onclick="getExcelTable('.grid');" />
