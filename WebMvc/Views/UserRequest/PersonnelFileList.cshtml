@{
    ViewBag.Title = "Список личных дел";
    Layout = "~/Views/Shared/_LayoutModern.cshtml";
}
<script src="../../Scripts/jsTree/jstree.min.js" type="text/javascript"></script>
<link href="../../Scripts/jsTree/themes/default/style.min.css" rel="stylesheet" type="text/css" />
<style>
.grid
{
    display:table;
    width:100%;
}
.grid-cell
{
       display:table-cell;
       
}
.grid-item
{
    border:1px solid lightgray; 
    border-radius:2px;
    
}
.grid-menu
{
    
background: rgb(242,246,248); /* Old browsers */
background: -moz-linear-gradient(top,  rgba(242,246,248,1) 0%, rgba(216,225,231,1) 50%, rgba(181,198,208,1) 51%, rgba(224,239,249,1) 100%); /* FF3.6-15 */
background: -webkit-linear-gradient(top,  rgba(242,246,248,1) 0%,rgba(216,225,231,1) 50%,rgba(181,198,208,1) 51%,rgba(224,239,249,1) 100%); /* Chrome10-25,Safari5.1-6 */
background: linear-gradient(to bottom,  rgba(242,246,248,1) 0%,rgba(216,225,231,1) 50%,rgba(181,198,208,1) 51%,rgba(224,239,249,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f2f6f8', endColorstr='#e0eff9',GradientType=0 ); /* IE6-9 */
padding:5px;
}
</style>
<h2>Список личных дел</h2>
<div class="grid" >
<div class="grid-cell" style="width:30%;" id="LeftSide">
    <div  class="grid-item grid-menu" style="width:100%; " id="DepartmentTreeControls">
    <button>Показать документы</button>
    </div>
    <div  class="grid-item" style="overflow:scroll; width:100%; height:500px;" id="DepartmentTree">
    <div id="tree"></div>
    </div>
</div>
<div class="grid-cell" id="RightSide">
    <div  class="grid-item grid-menu" style="width:100%;" id="DepartmentContentControls">
    <button>Отправить</button>
    <button>Сохранить</button>
    </div>
    <div  class="grid-item" style="overflow:scroll; width:100%;height:500px;" id="DepartmentContent"></div>
</div>
</div>
<script>
    initTree = function (data) {
        $('#tree').jstree({
            'core': {
                'data': eval(data)
            }
        })
        .on('changed.jstree', function (e, data) { if (data.action == "select_node") { $("#DepartmentContent").text(data.node.text); } });
    }
    $.post('/Base/GetAllDepartmentsTree', {}, initTree);
    $('button').button();
</script>

