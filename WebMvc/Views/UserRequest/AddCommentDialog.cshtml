@model Reports.Presenters.UI.ViewModel.AddCommentModel
<html>
<head>
    <title/>
</head>
<body>
    <table border="0" cellpadding="0" cellspacing="0" id = "DialogTable" style="width:100%;height:100px">
                <tr>
                    <td colspan="2"><div id="AddCommentError" style="color:Red;display:none;"/></td>
                    @Html.HiddenFor(model => model.DocumentId)
                </tr>
                <tr>
                    <td style="text-align:right">@Html.LabelFor(model => model.Comment):</td>
                    <td>
                       @Html.TextAreaFor(model => model.Comment, 4, 50,(object)new { style = "resize: none;" })
                    </td>
                </tr>
    </table>
</body>
</html>
